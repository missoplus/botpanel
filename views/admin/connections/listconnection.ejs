
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>List Of Connections</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav
                        aria-label="breadcrumb"
                        class="breadcrumb-header float-start float-lg-end"
                >
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="home">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            ConnectionList
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header"></div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                    <tr>
                        <th>Key</th>
                        <th>File_Id</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% if(connections.length > 0) { %>
                    <% for(let connection of connections) { %>
                    <tr>
                        <th scope="row"><%= connection.key %></th>
                        <th scope="row"><%= connection.file_Id %></th>
                        <td>
                            <a href="/panel/connections/<%= connection._id %>" class="btn btn-sm btn-warning"><i class="bi bi-pencil"></i></a>
                            <a href="#" onclick="deleteConnection('<%= connection._id %>')" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                        </td>
                    </tr>
                    <% } %>
                    <% } else { %>
                    <tr>
                        <td>No data found</td>
                    </tr>
                    <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <a href="/panel/connections/add" class="btn btn-success">Add New</a>
    </section>
</div>
<script>
    function deleteConnection(id){
        if(confirm('are you sure?')){
            window.location.href = '/panel/connections/delete/'+id;
        }
    }
</script>