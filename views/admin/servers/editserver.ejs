<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Edit Servers(<%= server.name %>)</h3>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav
                        aria-label="breadcrumb"
                        class="breadcrumb-header float-start float-lg-end"
                >
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="home">Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            Edit Servers
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <form action="/panel/servers/<%= server._id %>" method="POST" id="servers" enctype="application/x-www-form-urlencoded">
        <section id="multiple-column-form">
            <div class="row match-height">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Add Your Server</h4>
                        </div>
                        <div class="card-content">
                            <div class="card-body">
                                <form class="form">
                                    <div class="row">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="first-name-column">Name</label>
                                                <input
                                                        type="text"
                                                        name="name"
                                                        id="first-name-column"
                                                        class="form-control"
                                                        placeholder="Name"
                                                        value="<%= server.name%>"
                                                />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="last-name-column">IP</label>
                                                <input
                                                        type="text"
                                                        name="ip"
                                                        id="last-name-column"
                                                        class="form-control"
                                                        placeholder="IP"
                                                        value="<%= server.ip%>"
                                                />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <label for="email-id-column">File Id</label>
                                                <input
                                                        type="number"
                                                        name="file_Id"
                                                        id="email-id-column"
                                                        class="form-control"
                                                        placeholder="File_Id"
                                                        value="<%= server.file_Id%>"
                                                />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group">
                                                <div class="col-md-6 mb-4">
                                                    <h6>Choose Your Service(<%= server.service_Id %>)</h6>
                                                    <fieldset class="form-group">
                                                        <select name="services" class="form-select" id="services" value="<%= server.service_Id%>">
                                                            <option>
                                                            </option>
                                                        </select>
                                                    </fieldset>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group col-12">
                                        </div>
                                        <div class="col-12 d-flex justify-content-end">
                                            <button
                                                    type="submit"
                                                    class="btn btn-primary me-1 mb-1"
                                            >
                                                Update
                                            </button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </form>
</div>